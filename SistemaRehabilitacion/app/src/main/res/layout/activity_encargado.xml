<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mibackgroundgradiente"
    tools:context=".Vistas.Configuracion.EncargadoActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="339dp"
        android:layout_height="235dp"
        android:layout_margin="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_usuario"
        app:layout_constraintBottom_toTopOf="@+id/lbl_iniciar_encargado2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lbl_iniciar_encargado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Nombre Del Encargado"
        android:inputType="text"
        android:textColor="#ffffff"

        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lbl_iniciar_encargado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/lbl_iniciar_encargado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Quién supervisará la actividad del paciente"
        android:textColor="#ffffff"
        android:textSize="12sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_iniciar_encargado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_iniciar_encargado2" />

    <EditText
        android:id="@+id/txt_iniciar_encargado"
        android:layout_width="294dp"
        android:layout_height="41dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/miplaintext"
        android:ems="10"
        android:hint="Nombres y Apellidos"
        android:inputType="textPersonName"
        android:textColor="#9F000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_iniciar_encargado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_iniciar_encargado" />

    <Button
        android:id="@+id/btn_iniciar_encargado"
        android:layout_width="184dp"
        android:layout_height="54dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/boton_verde"
        android:text="Iniciar"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_iniciar_encargado" />


</androidx.constraintlayout.widget.ConstraintLayout>